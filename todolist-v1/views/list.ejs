<%- include('header') -%>
<div class="box" id="heading">
  <h1><%= listTitle %></h1>
</div>

<div class="box">
  <% for (let i=0; i < items.length; i++) { %>
  <div class="item">
    <input type="checkbox" />
    <p><%= items[i] %></p>
  </div>
  <% } %>

  <% if (listTitle == "Work List") { %>
  <form class="item" action="/work" method="post">
    <% } else { %>
    <form class="item" action="/" method="post">
      <% } %>
      <input type="text" name="todo" placeholder="New Item" />
      <button type="submit" name="button">+</button>
    </form>
</div>
<%- include('footer') -%>
